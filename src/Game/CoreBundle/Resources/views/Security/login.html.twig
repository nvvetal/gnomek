{% extends 'GameCoreBundle:Security:layout.html.twig' %}
{%  block title %}Admin Login{% endblock %}
{% block content %}
    {% if error %}
        <div class="alert alert-error">{{ error }}</div>
    {% endif %}

	<form class="form-horizontal" action="{{ path('login_check') }}" method="post" id="login_form">
		<div class="control-group">
			<label class="control-label" for="username">{% trans %}_login{% endtrans %}</label>
			<div class="controls">
				<input type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">{% trans %}_password{% endtrans %}</label>
			<div class="controls">
				<input type="password" id="password" placeholder="Password" name="_password" />
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn btn-success">{% trans %}_sign_in{% endtrans %}</button>
                <button type="button" class="btn btn-link" onclick="window.location.href='{{ path('register') }}'">{% trans %}_register_link{% endtrans %}</button>
			</div>
		</div>
        <div class="control-group">
            <div class="controls">
        <a href="{{ path('facebook_login_url') }}" title="{% trans %}_facebook_login{% endtrans %}"><img src="http://www.facebook.com/images/fb_icon_325x325.png" width="100" height="100" alt="" /></a>
            </div>
        </div>
    </form>
    {% endblock %}