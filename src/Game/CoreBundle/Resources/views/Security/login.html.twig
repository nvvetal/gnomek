{% extends 'GameCoreBundle:Security:layout.html.twig' %}
{%  block title %}Admin Login{% endblock %}
{% block content %}
	{% if error %}
		<div class="alert alert-error">{{ error.message }}</div>
	{% endif %}

	<form class="form-horizontal" action="{{ path('login_check') }}" method="post">
		<div class="control-group">
			<label class="control-label" for="username">Username</label>
			<div class="controls">
				<input type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">Password</label>
			<div class="controls">
				<input type="password" id="password" placeholder="Password" name="_password" />
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn btn-success">Sign in</button>
			</div>
		</div>
	</form>
{% endblock %}