{% extends 'GameCoreBundle:Security:layout.html.twig' %}
{%  block title %}Admin Login{% endblock %}
{% block content %}
    {% if errors %}
        <div class="alert alert-error">
            {% for error in errors %}
                <div>{{ error.message }}</div>
            {% endfor %}
        </div>
    {% endif %}

	<form class="form-horizontal" action="{{ path('login_check') }}" method="post" id="login_form">
		<div class="control-group">
			<label class="control-label" for="username">Username</label>
			<div class="controls">
				<input type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">Password</label>
			<div class="controls">
				<input type="password" id="password" placeholder="Password" name="_password" />
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="button" class="btn btn-success" onclick="$('#login_form').submit()">Sign in</button>
                <button type="button" class="btn btn-danger" onclick="$('#login_form').attr('action', '{{ path('register') }}').submit()">REGISTER</button>
			</div>
		</div>
	</form>
{% endblock %}